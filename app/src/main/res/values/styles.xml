<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTextAppearance.BodyNormal" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="MyTextAppearance.BodySmall" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentSmallTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="MyTextAppearance.BodyLarge" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentLargeTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="MyTextAppearance.BodyNormal.Shadow" parent="MyTextAppearance.BodyNormal">
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyTextAppearance.BodySmall.Shadow" parent="MyTextAppearance.BodySmall">
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyTextAppearance.BodyLarge.Shadow" parent="MyTextAppearance.BodyLarge">
        <item name="android:textSize">@dimen/contentLargeTextSize</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyTextAppearance.Bottom" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/contentSmallTextSize</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>
